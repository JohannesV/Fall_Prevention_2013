<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.ntnu.stud.fallprevention"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="no.ntnu.stud.fallprevention.LaunchActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="no.ntnu.stud.fallprevention.WriteName"
            android:label="@string/title_activity_write_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        
        <activity
            android:name="no.ntnu.stud.fallprevention.MainScreen"
            android:label="@string/title_activity_mainscreen"
			android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        
        <activity
            android:name="no.ntnu.stud.fallprevention.EventList"
            android:label="@string/title_activity_eventlist"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:launchMode="singleTask" >
        </activity>
        
        <activity
            android:name="no.ntnu.stud.fallprevention.EventDetail"
            android:label="@string/title_activity_eventdetail"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        
    </application>

</manifest>