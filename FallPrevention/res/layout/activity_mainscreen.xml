<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">    
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5sp"
	    android:orientation="vertical">
	
	    <TextView
	        android:id="@+id/widget_notification_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:text="@string/general_lorem_short"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textSize="30sp"
	        android:layout_marginTop="10sp"
	        android:layout_marginBottom="5sp" />
	    <View 
	        android:layout_width="match_parent"
			android:layout_height="2dip"
			android:background="#ccc" />
	    
	    <ImageButton
	        android:id="@+id/mainScreenSmileyImage"
	        android:layout_width="200dp"
	        android:layout_height="200dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10sp"
	        android:background="@drawable/ok_job"
	        android:onClick="fireEvent" />
	    
	    <TextView
	        android:id="@+id/mainScreenSubText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:text="@string/general_lorem_long"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textSize="18sp"
	        android:layout_marginTop="5sp"
	        android:layout_marginBottom="5sp" />
	</LinearLayout>
</ScrollView>