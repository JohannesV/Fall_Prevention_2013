<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity" >

    <Button
        android:id="@+id/btnStoreData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="startMain"
        android:text="@string/start_button" />

        <Button
            android:id="@+id/btnStopData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnStoreData"
            android:onClick="stopMain"
            android:text="@string/stop_button" />

        <Button
            android:id="@+id/btnCalibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnStopData"
            android:onClick="calibrate"
            android:text="@string/calibrate_button" />

</RelativeLayout>